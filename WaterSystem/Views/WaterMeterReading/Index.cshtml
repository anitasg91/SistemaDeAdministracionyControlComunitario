<style>
    .row {
        margin: 2% 0 2% 0 !important;
    }
</style>

@{
    string classBotones = _sessions.HasRol(roles.Superadmin) || _sessions.HasRol(roles.Presidente_Agua) ? "col-md-6 col-sm-6 col-xs-12" : "col-md-9 col-sm-9 col-xs-12";
    var classComprobante = !Model.CrearComprobante ? "hide" : string.Empty;
}



<form asp-controller="WaterMeterReading" asp-action="SaveListReading" method="post">
    <div class="row">
        @Html.Partial(PartialViewEnum.Shared_Manzana, Model.Manzana)
        <input asp-for="IdManzana" class="form-control" type="hidden" value="@Model.IdManzana" />
        @if (_sessions.HasRol(roles.Superadmin) || _sessions.HasRol(roles.Presidente_Agua))
        {
            @Html.Partial(PartialViewEnum.Shared_Mes, Model.Mes)
            <input asp-for="IdPeriodo" class="form-control" type="hidden" value="@Model.IdPeriodo" />
        }
        
            <div id="dvBtnContainer" class="@classBotones">
                <br/>
            @if (_sessions.HasAccessTo(new[] { (int)PermisoEn.TodosLP, (int)PermisoEn.Crear }))
            {
                <div id="btnCharge" class="btn btn-success float-right btnMarginTop">
                    <i class="fas fa-plus-square fa-1x" style="color:white"></i> Cargar Lectura
                </div>
            }


               @*  <div id="btnEdit" class="btn btn-success float-right btnMarginTopDer" onclick="configureEditReading();">
                    <i class="fas fa-edit fa-1x" style="color:white"></i> Editar Lectura
                </div> *@
                 @if (Model.CrearComprobante)
            {
                <div id="btnCreate" class="btn btn-info float-right btnMarginTopDer @classComprobante" onclick="configureCreateVoucher();">
                    <i class="fas fa-file-invoice fa-1x" style="color:white"></i> Crear Comprobante
                </div>
            }

            </div>
    </div>
    <div id="dvTabla" class="datagrid" style="max-height:450px; overflow-y:scroll;">
        @* @Html.Partial(PartialViewEnum.Table, Model.Medidor) *@
        <div class="row">
            <div class="col-12 datagrid">
                <table id="table_id">
                    <thead>
                        <tr>
                            <th scope="col">Titular</th>
                            <th scope="col">Medidor</th>
                            <th scope="col">L. Anterior</th>
                            <th scope="col">L. Actual</th>
                            <th scope="col">F. Última Lectura</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int contador = 0;
                        }
                        @foreach (var x in Model.Medidor)
                        {
                            bool estaActualizado = x.FechaLectura.ToString("MM/yyyy") == DateTime.Now.ToString("MM/yyyy");
                            string classUpdate = estaActualizado ? "isUpdate" : string.Empty;
                            string isNew = !estaActualizado ? "isUpdate" : string.Empty;

                            <tr>
                                <td data-id="@x.Id">@x.NombreTitular
                                    <input asp-for="Medidor[contador].Id" class="form-control" type="hidden" value="@x.Id" />

                                </td>
                                <td>@x.Numero</td>

                                <td>
                                    <input asp-for="Medidor[contador].LecturaAnterior" class="form-control" type="hidden" value="@x.LecturaAnterior" />

                                    @if (estaActualizado)
                                    {
                                        <input asp-for="Medidor[contador].LecturaActual" class="form-control inpEdit hide" type="number" value="@x.LecturaActual" />
                                    }
                                    <label class="inpReadOnly @classUpdate">@x.LecturaAnterior</label>
                                </td>
                                <td>
                                    @if (!estaActualizado)
                                    {
                                        <input asp-for="Medidor[contador].LecturaActual" class="form-control inpEdit hide" type="number" value="@x.LecturaActual" />
                                    }
                                    <label class="inpReadOnly @isNew">@x.LecturaActual</label>
                                </td>

                                <td class="@x.strClassFechaLectura">@x.strFechaLectura</td>
                            </tr>

                            contador++;
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</form>



