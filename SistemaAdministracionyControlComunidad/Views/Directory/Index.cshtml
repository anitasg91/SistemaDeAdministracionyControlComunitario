        @*============================================================================*@





        <div id="animacion" class="row">
            @{
                var users = (List<SAyCC.Entities.Login.UserEntity>)ViewBag.Users;
                foreach (var item in users)
                {
                    var imgn = string.IsNullOrEmpty(item.ImagenUpload) ? null : Convert.FromBase64String(item.ImagenUpload);
                    <div class="col-xl-3 col-lg-4 col-md-4 col-sm-6 col-xs-12">
                        <div class="row">
                            <div style="margin-top:5%;" class="col-xl-11 col-lg-11 col-md-11 col-sm-11 col-xs-12">
                                <div style="border-radius:1em; background-color:#0f6c7b29 !important;border: 0.5px solid #0f6c7b29;" class="row">
                                    <div style="background-color:#0f6c7b !important; text-align:center; color:white;border-radius: 1em 0; box-shadow: 2px 2px 4px black;"
                                         class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12 bg-success">
                                        <label>@string.Concat(item.Nombre, " ", item.APaterno, " ", item.AMaterno)</label><br />
                                    </div>
                                    <div class="col-xl-4 col-lg-4 col-md-4 col-sm-6 col-xs-12">

                                        @if (imgn != null)
                                        {
                                            <img class="rounded-circle" src="@String.Format("data:image/png;base64,{0}", Convert.ToBase64String(imgn))" style="margin-top: 10%; width:100%; height:80%;">
                                        }
                                        else
                                        {
                                            <img class="rounded-circle" src="~/images/user.png" style="margin-top: 10%; width:130%; height:100%;">
                                        }

                                    </div>
                                    <div class="col-xl-8 col-lg-8 col-md-8 col-sm-6 col-xs-12">
                                        <label style="margin-top: 5%;">@item.Perfil</label><br />
                                        <label>@item.Telefono</label><br />
                                    </div>
                                    <div style="text-align:center;" class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <label>@item.Email</label><br />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                }
            }


        </div>
    </div>

