
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutMenu.cshtml";
}

    <style>
        input {
            display: none;
        }

        .button {
            padding: 5px 20px 5px 20px;
            background-color: #999;
            color: #fff;
            float: left;
            margin-right: 10px;
            cursor: pointer;
            font-family: sans-serif;
            border-radius: 5px;
        }

            .button:active, .button:hover {
                background-color: #666;
            }

        #elemento {
            width: 100px;
            height: 100px;
            background-color: aquamarine;
            color: #fff;
            margin-top: 50px;
        }

        .clear {
            clear: both;
        }

        #button1:checked ~ #elemento {
            margin-left: 0;
            transition: all 2s;
            -moz-transition: all 2s;
            -webkit-transition: all 2s;
            -o-transition: all 2s;
        }

        #button2:checked ~ #elemento {
            margin-left: 370px;
            transition: all 2s;
            -moz-transition: all 2s;
            -webkit-transition: all 2s;
            -o-transition: all 2s;
        }

        #button3:checked ~ #elemento {
            border-radius: 100px;
            transition: all 2s;
            -moz-transition: all 2s;
            -webkit-transition: all 2s;
            -o-transition: all 2s;
        }

        #button4:checked ~ #elemento {
            opacity: 0;
            transition: all 2s;
            -moz-transition: all 2s;
            -webkit-transition: all 2s;
            -o-transition: all 2s;
        }

        #button5:checked ~ #elemento {
            width: 200px;
            height: 200px;
            transition: all 2s;
            -moz-transition: all 2s;
            -webkit-transition: all 2s;
            -o-transition: all 2s;
        }

        #button6:checked ~ #animacion {
            transform: rotate(360deg) !important;
            -webkit-transform: rotate(360deg) !important;
            transition: all 2s !important;
            -moz-transition: all 2s !important;
            -webkit-transition: all 2s !important;
            -o-transition: all 2s !important;
        }
    </style>
    <div style=" padding:1%;" class="container">

        <div class="row">
            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-6 col-xs-12">
                <label style="float:left;">Filtro: </label><br />
                <select class="form-control" id="ddlFiltro">
                    <option selected value="0">Todos</option>
                    <option value="1">Por aplicación</option>
                    <option value="2">Perfil</option>
                    <option value="3">Nombre</option>
                </select>
            </div>
            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-6 col-xs-12">
                <label style="float:left;">Valor: </label><br />
                <select class="form-control" id="ddlResultado">
                    <option selected value="1">Delegación</option>
                    <option value="2">Iglesia</option>
                    <option value="3">Agua Potable</option>
                    <option value="3">Actividades Deportivas y culturales</option>
                </select>
                <input class="form-control hide" placeholder="Teclee nombre o apellido" id="txtNombre" />

            </div>

        </div>
