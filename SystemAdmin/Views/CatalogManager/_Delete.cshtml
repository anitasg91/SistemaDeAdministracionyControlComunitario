@model SAyCC.Entities.SystemAdmin.PersonalizeModalDelete

<div style="margin: 10% 0;" id="ModalDelete" class="modal fade bd-example-modal-md" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <input id="hfIdDelete" class="form-control" type="hidden" value="@Model.Id" />
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class='fas fa-trash fa-lg'></i>
                    @Model.Titulo
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-md-12 col-sm-12 col-xs-12">
                        <label>@Model.Descripcion</label><br />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="DeleteNo" type="button" class="btn btn-danger" data-dismiss="modal">
                    <i class="fas fa-window-close fa-1x" style="color:white"></i> No
                </button>
                <div name="DeleteYes" type="submit" class="btn btn-success">
                    <i class="fas fa-save fa-1x" style="color:white"></i> Sí
                </div>
            </div>
        </div>
    </div>
</div>
